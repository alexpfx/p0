<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/project_button_width</item>
        <item name="android:layout_height">@dimen/project_button_height</item>
        <item name="android:background">@color/backgroundButton</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">2dp</item>

    </style>
    <style name="label_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/backgroundButton</item>
    </style>


</resources>
